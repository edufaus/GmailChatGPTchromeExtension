{
    "manifest_version": 3,
    "name": "Luis Chat",
    "description": "extension that uses chatGpt for my dad",
    "version": "0.1",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ]
}